.scroll {
    z-index: 999;
    position: fixed;
    top: 61.8%;
    text-align: center;
    line-height: 42px;
}
#article-nav-button{
    left: 230px;
    transition: transform 0.3s ease-in-out, left 0.3s ease-in-out;
}
#article-scroll-button{
    right: 0;
}
.scroll a:not(:last-child) {
    border-bottom: 1px solid #fff;
}
.scroll a {
    display: block;
    width: 29px;
    height: 42px;
    font-size: 28px;
    background: rgba(215,216,215,0.4);
}
.scroll a .fa {
    color: rgba(255,255,255,0.8);
}
